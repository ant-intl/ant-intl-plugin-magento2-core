<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/antom/orders/carts/mine/payment-status" method="POST">
        <service class="Antom\Core\Api\AntomOrderPaymentStatusInterface" method="getOrderPaymentStatus"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>

    <route url="/V1/antom/orders/guest-carts/:cartId/payment-status" method="POST">
        <service class="Antom\Core\Api\GuestAntomOrderPaymentStatusInterface" method="getOrderPaymentStatus"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
