{
    "name": "antom-magento/magento2-core",
    "description": "Antom core module for Magento 2",
    "version": "0.1.0",
    "type": "magento2-module",
    "license": ["MIT"],
    "minimum-stability": "stable",
    "prefer-stable": true,

    "require": {
        "php": "^8.1",
        "antom/global-open-sdk-php": "~1.4.7",
        "magento/framework": "^101.0 || ^102.0 || ^103.0",
        "magento/module-sales": "^101.0 || ^102.0 || ^103.0",
        "magento/module-checkout": "^100.0 || ^101.0 || ^102.0",
        "magento/module-payment": "^100.0 || ^101.0 || ^102.0",
        "magento/module-quote": "^100.0 || ^101.0 || ^102.0",
        "magento/module-store": "^100.0 || ^101.0 || ^102.0",
        "magento/module-customer": "^101.0 || ^102.0 || ^103.0",
        "magento/module-csp": "^100.3 || ^100.4"
    },

    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "php-http/mock-client": "^1.3",
        "magento/magento-coding-standard": "^31.0",
        "object-calisthenics/phpcs-calisthenics-rules": "^3.5",
        "phpstan/phpstan": "^1.10"
    },

    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],

    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "Antom\\Core\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Antom\\Core\\Test\\": "Test"
        }
    },

    "scripts": {
        "test": "vendor/bin/phpunit --configuration phpunit.xml.dist",
        "test-coverage": [
            "mkdir -p build/coverage",
            "vendor/bin/phpunit --configuration phpunit.xml.dist --coverage-html build/coverage"
        ]
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "magento/composer-dependency-version-audit-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
